<header id="header">
	<nav class="navbar is-spaced" role="navigation" aria-label="main navigation">
		<div class="container">
			<div class="navbar-brand">
				<a class="navbar-item" href="{{ route('home') }}">
					<img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
				</a>

				<a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
					<span aria-hidden="true"></span>
					<span aria-hidden="true"></span>
					<span aria-hidden="true"></span>
				</a>
			</div>

			<div id="navbarBasicExample" class="navbar-menu">
				<div class="navbar-start">
					<a href="{{ route('home') }}" class="navbar-item is-size-5 has-text-weight-semibold has-text-grey-light">
						Home
					</a>

					<a class="navbar-item is-size-5 has-text-weight-semibold has-text-grey-light">
						Documentation
					</a>

					<div class="navbar-item has-dropdown is-hoverable">
						<a class="navbar-link is-size-5 has-text-weight-semibold has-text-grey-light">
							More
						</a>

						<div class="navbar-dropdown">
							<a class="navbar-item">
								About
							</a>
							<a class="navbar-item">
								Jobs
							</a>
							<a class="navbar-item">
								Contact
							</a>
							<hr class="navbar-divider">
							<a class="navbar-item">
								Report an issue
							</a>
						</div>
					</div>
				</div>

				{% if user %}
					<div class="navbar-item">
						<div class="field is-grouped">
							<p class="control has-icons-left is-hidden-touch">
								<input type="text" placeholder="Search..." class="input" style="width: 200px;"> 
								<span class="icon is-left"><i class="fas fa-search"></i></span>
							</p>
						</div>
					</div>
					<div class="navbar-item has-dropdown is-hoverable">
						<a class="navbar-link">
							<figure 
							class="image is-rounded is-48x48" 
							style="background-image: url({{ user.avatar() }}); 
							background-size: cover; 
							background-position: center top; 
							background-repeat: no-repeat; 
							box-shadow: rgb(225, 231, 245) 0px 0px 0px 1px inset;
							border-radius: 25px; 
							margin-right: 10px;">
						</figure>
						{{ user.fullName() }}
					</a> 
					<div class="navbar-dropdown is-right">
						<a href="{{ route('account') }}" class="navbar-item">
							Conta 
						</a> 
						<a href="/users/91/reviews" class="navbar-item">
							Perfil
						</a> 
						<a href="/users/91/recommendations" class="navbar-item">
							Recommendations
						</a>
						<hr class="navbar-divider"> 
						<a href="/settings/" class="navbar-item">
							<span class="icon is-small"><i class="fas fa-cog"></i></span>&nbsp;
							Settings
						</a> 
						<a class="navbar-item" href="#" onclick="event.preventDefault(); document.getElementById('logout').submit();">
							<span class="icon is-small"><i class="fas fa-sign-out-alt"></i></span>&nbsp;
							Sair
						</a>
					</div>
				</div>    

			{% else %}
				<div class="navbar-end">
					<div class="navbar-item">
						<div class="field is-grouped">
							<p class="control has-icons-left is-hidden-touch">
								<input type="text" placeholder="Search..." class="input" style="width: 200px;"> 
								<span class="icon is-left"><i class="fas fa-search"></i></span>
							</p> 
							<p class="control">
								<a href="{{ route('auth.signin') }}" class="button">
									<span class="icon is-small"><i class="fas fa-sign-in-alt"></i></span> 
									<span>Entrar</span>
								</a>
							</p> 
							<p class="control">
								<a href="{{ route('auth.signup') }}" class="button is-primary">
									<span class="icon"><i class="fas fa-user-plus"></i></span> 
									<span>Criar Conta</span>
								</a>
							</p>
						</div>
					</div>
				</div>
			{% endif %}
		</div>
	</div>
</nav>

<form action="{{ route('auth.signout') }}" method="POST" style="display: none;" id="logout">
	{{ csrf() | raw }}
</form>

</header>
